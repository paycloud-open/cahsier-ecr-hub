<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270.0" android:endColor="@color/pos_base_end_color_pressed" android:startColor="@color/pos_base_start_color_pressed" />

            <corners android:radius="0.0dp" />
        </shape></item>
    <item><layer-list>
            <item><shape>
                    <gradient android:angle="270.0" android:endColor="@color/pos_base_end_color_default" android:startColor="@color/pos_base_start_color_default" />

                    <corners android:bottomLeftRadius="0.0dp" android:bottomRightRadius="0.0dp" android:topLeftRadius="11.0dp" android:topRightRadius="11.0dp" />
                </shape></item>
            <item android:bottom="-1dp" android:left="0dp" android:right="0dp" android:top="0dp"><shape>
                    <stroke android:width="1dp" android:color="@color/pos_rounded_container_border" />

                    <solid android:color="#00000000" />
                </shape></item>
        </layer-list></item>

</selector>